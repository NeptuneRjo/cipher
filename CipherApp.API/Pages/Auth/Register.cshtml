@page
@model RegisterModel
@{
}

<div>
    <div>
        <ul class="list-unstyled">
            <li class="text-danger">@Html.ValidationMessage("ApplicationError")</li>
            <li class="text-danger">@Html.ValidationMessage("RegisterError")</li>
        </ul>
    </div
    >
    <form method="post">
        <div class="form-group">
            <label asp-for="RegisterInput.Email" class="control-label">Email:</label>
            <input asp-for="RegisterInput.Email" class="form-control" />
            <span asp-validation-for="RegisterInput.Email" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="RegisterInput.Username" class="control-label">Username:</label>
            <input asp-for="RegisterInput.Username" class="form-control" />
            <span asp-validation-for="RegisterInput.Username" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="RegisterInput.Password" class="control-label">Password:</label>
            <input asp-for="RegisterInput.Password" class="form-control" />
            <span asp-validation-for="RegisterInput.Password" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="RegisterInput.ConfirmPassword" class="control-label">Verify Password:</label>
            <input asp-for="RegisterInput.ConfirmPassword" class="form-control" />
            <span asp-validation-for="RegisterInput.ConfirmPassword" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary mt-1">Register</button>
    </form>
</div>