@page
@model CipherApp.API.Pages.RegisterModel
@{
}

<h1>Register</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="Input.Username">Username</label>
        <p>@Html.ValidationMessage("Username")</p>
        <input asp-for="Input.Username" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Input.Password">Password</label>
        <input asp-for="Input.Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Input.Password2">Verify Password</label>
        <p>@Html.ValidationMessage("Password")</p>
        <input asp-for="Input.Password2" class="form-control" />
    </div>
    <button type="submit">Register</button>
</form>